class Solution {
public:
    int bitwiseComplement(int num) {
        int temp = num;
        if(num==0)
        {
            return 1;
        }
        string s1,s2;
        while(temp!=0)
        {
            int r = temp%2;
            s1 = to_string(r) + s1;
            temp = temp/2;
        }
        for(int i=0; i<s1.length(); ++i)
        {
            if(s1[i]=='0')
            {
                s2 = s2 + to_string(1);
            }
            else
            {
                s2 = s2 + to_string(0);
            }
        }
        //cout<<s1<<" "<<s2;
        int ans = 0;
        int idx = s2.length()-1;
        for(int i=0; i<s2.length(); ++i)
        {
            if(s2[i]=='0')
            {
                --idx;
            }
            else
            {
                ans = ans + pow(2,idx);
                --idx;
            }
        }
        return ans;
    }
};
