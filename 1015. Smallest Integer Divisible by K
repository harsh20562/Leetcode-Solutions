class Solution {
public:
    int smallestRepunitDivByK(int k) {
        if(k%2==0)
        {
            return -1;
        }
        else if(k%5==0)
        {
            return -1;
        }
        else
        {
            string s = "";
            int r = 0;
            for(int i=1; i<=k; ++i)
            {
                if((r=(r*10 + 1)%k)==0)
                {
                    return i;
                }
            }
            return -1;
        }
    }
};
