class Solution {
    public String minRemoveToMakeValid(String s) {
        int[] visited = new int[s.length()];
        Stack<Character> stack = new Stack<>();
        int prev = 0;
        ArrayList<Integer> arr = new ArrayList<>();
        for(int i=0; i<s.length(); ++i)
        {
            if(s.charAt(i)=='(')
            {
                visited[i] = 1;
                arr.add(i);
            }
            else if(s.charAt(i)==')')
            {
                int idx = arr.size();
                    if(idx==0)
                    {
                        visited[i] = 1;
                    }
                    else
                    {
                        visited[arr.get(idx-1)] = 0;
                        arr.remove(idx-1);
                    }
            }
            else
            {
                continue;
            }
        }
        String ans = new String();
        ans = "";
        for(int i=0; i<s.length(); ++i)
        {
            if(visited[i]==0)
            {
                char temp = s.charAt(i);
                ans = ans + temp;
            }
        }
        return ans;
    }
}
