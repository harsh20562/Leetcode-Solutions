class Solution {
public:
    int minDeletions(string s) {
        unordered_map<char,int> mp;
        int n = s.length();
        for(int i=0; i<n; ++i)
        {
            mp[s[i]]++;
        }
        int visited[100001];
        memset(visited,0,sizeof(visited));
        int ans = 0;
        for(auto& it: mp)
        {
            if(visited[it.second]==0)
            {
                visited[it.second] = 1;
            }
            else
            {
                for(int i = it.second-1; i>=0; --i)
                {
                    if(visited[i]==0)
                    {
                        visited[i] = 1;
                        if(i==0)
                        {
                            visited[i] = 0;
                        }
                        ans = ans + it.second - i;
                        break;
                    }
                    else
                    {
                        continue;
                    }
                }
            }
        }
        return ans;
    }
};
