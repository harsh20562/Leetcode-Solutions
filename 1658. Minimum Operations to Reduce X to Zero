class Solution {
public:
    int minOperations(vector<int>& a, int x) {
        int n = a.size();
        int sum = 0;
        for(int i=0; i<n; ++i)
        {
            sum = sum + a[i];
        }
        int last = 0;
        int curr = 0;
        int ans = -1;
        for(int i=0; i<n; ++i)
        {
            curr = curr + a[i];
            while(last <= i && curr > sum - x)
            {
                curr = curr - a[last];
                ++last;
            }
            if(curr==sum-x)
            {
                ans = max(ans,i-last+1);
            }
        }
        if(ans==-1)
        {
            return -1;
        }
        else
        {
            return n- ans;
        }
    }
};
