class Solution {
public:
    vector<int> twoSum(vector<int>& a, int target) {
        int ptr1 = 0;
        int ptr2 = a.size()-1;
        while(ptr1 < ptr2)
        {
            if(a[ptr1] + a[ptr2] == target)
            {
                return {ptr1+1, ptr2+1};
            }
            else if(a[ptr1] + a[ptr2] < target)
            {
                ++ptr1;
            }
            else if(a[ptr1] + a[ptr2] > target)
            {
                --ptr2;
            }
        }
        return {};
    }
};
