/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        
        int value = l1->val + l2->val;
        ListNode *head = new ListNode(value - (value/10)*10);
        l1=l1->next;
        l2 = l2->next;
        int carry = value/10;
        ListNode *p = head;
        while(l1!=NULL || l2!=NULL)
        {
            if(l1!=NULL && l2==NULL)
            {
                value = l1->val + carry;
                ListNode *s = new ListNode(value - (value/10)*10);
                l1=l1->next;
                carry = value/10;
                p->next = s;
                p = p->next;
            }
            else if(l2!=NULL && l1==NULL)
            {
                value = l2->val + carry;
                ListNode *s = new ListNode(value - (value/10)*10);
                carry = value/10;
                p->next = s;
                p=p->next;
                l2=l2->next;
            }
            else if(l1!=NULL && l2!=NULL)
            {
                value = l1->val + l2->val + carry;
                ListNode *s = new ListNode(value - (value/10)*10);
                carry = value/10;
                p->next = s;
                p=p->next;
                l1=l1->next;
                l2=l2->next;
            }
        }
        if(carry!=0)
        {
            ListNode *s = new ListNode(carry);
            p->next = s;
        }
        return head;
    }
    
    ListNode* reverseList(ListNode* head) {
        
        if(head==NULL||head->next==NULL)
        {   return head;    }
        else
        {
            ListNode *p=reverseList(head->next);
            head->next->next=head;
            head->next=NULL;
            return p;
        }
    }
};
