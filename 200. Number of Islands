class Solution {
public:
    int numIslands(vector<vector<char>>& grid) {
        int m = grid.size();
        int n = grid[0].size();
        // vector<vector<int>> visited(m, vector<int>(n));
        // for(int i = 0; i < m; ++i)
        // {
        //     for(int j = 0; j < n; ++j)
        //     {
        //         visited[i][j] = 0;
        //     }
        // }
        int cnt = 0;
        for(int i = 0; i < m; ++i)
        {
            for(int j = 0; j < n; ++j)
            {
                if(grid[i][j]=='1')
                {
                    grid[i][j] = '0';
                    DFS(grid, i, j, m, n);
                    ++cnt;
                }
            }
        }
        return cnt;
    }
    void DFS(vector<vector<char>>& grid, int i, int j, int m, int n)
    {
        if(i-1 >= 0 && grid[i-1][j] == '1')
        {
            grid[i-1][j] = '0';
            DFS(grid, i-1, j, m , n);
        }
        if(j-1 >= 0 && grid[i][j-1]=='1')
        {
            grid[i][j-1] = '0';
            DFS(grid, i, j-1, m, n);
        }
        if(j+1 < n && grid[i][j+1]=='1')
        {
            grid[i][j+1] = '0';
            DFS(grid, i, j+1, m, n);
        }
        if(i+1 < m && grid[i+1][j]=='1')
        {
            grid[i+1][j] = '0';
            DFS(grid, i+1, j, m, n);
        }
    }
};
