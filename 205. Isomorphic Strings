class Solution {
public:
    bool isIsomorphic(string s, string t) {
        return find(s,t) && find(t,s);
    }
    
    bool find(string s, string t)
    {
        if(s.length()!=t.length())
        {
            return false;
        }
        unordered_map<char,char> mp;
        int n = s.length();
        for(int i=0; i<n; ++i)
        {
            if(mp.find(s[i])==mp.end())
            {
                mp[s[i]] = t[i];
            }
            else
            {
                if(mp[s[i]]!=t[i])
                {
                    return false;
                }
            }
        }
        return true;
    }
};
