class Solution {
public:
    int minimumOperations(vector<int>& nums) {
        int n = nums.size();
        int mini = find(nums);
        int ans = 0;
        while(mini!=INT_MAX)
        {
            for(int i = 0; i < nums.size(); ++i)
            {
                if(nums[i] > 0)
                {
                    nums[i] = nums[i] - mini;
                }
            }
            ++ans;
            mini = find(nums);
        }
        return ans;
    }
    
    int find(vector<int>& nums)
    {
        int mini = INT_MAX;
        for(int i = 0; i < nums.size(); ++i)
        {
            if(nums[i] > 0 && nums[i] < mini)
            {
                mini = nums[i];
            }
        }
        return mini;
    }
};
