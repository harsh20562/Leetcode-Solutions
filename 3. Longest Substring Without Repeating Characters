class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int n = s.length();
        int ans = 0;
        int last[256];
        memset(last,-1,sizeof(last));
        int idx = -1;
        for(int i=0; i<n; ++i)
        {
            int x = s[i];
            idx = std::max(idx, last[x]+1);
            last[x] = i;
            ans = std::max(ans, i-idx+1);
        }
        return ans;
    }
};
