class Solution {
public:
    int coinChange(vector<int>& coins, int amount) {
        int dp[amount+1];
        memset(dp,-1,sizeof(dp));
        int n = coins.size();
        sort(coins.begin(),coins.end());
        dp[0] = 0;
        for(int i=0; i<n; ++i)
        {
            if(coins[i] <= amount)
            {
                dp[coins[i]] = 1;
            }
        }
        for(int i=1; i<=amount; ++i)
        {
            int temp = INT_MAX;
            for(int j = 0; j < n; ++j)
            {
                if(i-coins[j] >= 0 && dp[i - coins[j]]!=-1)
                {
                    temp = std::min(dp[i-coins[j]] + 1, temp);
                }
            }
            if(temp!=INT_MAX)
            {
                dp[i] = temp;
            }
            else
            {
                dp[i] = -1;
            }
        }
        return dp[amount];
    }
};
