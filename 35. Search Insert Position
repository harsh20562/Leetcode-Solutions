class Solution {
    public int searchInsert(int[] a, int target) {
        int low = 0;
        int high = a.length-1;
        int n = a.length-1;
        while(low<=high)
        {
            int mid = (low+high)/2;
            if(a[mid]==target)
            {
                return mid;
            }
            else if(a[mid]>target)
            {
                if(mid-1>=0 && a[mid-1]<target)
                {
                    return mid;
                }
                else if(a[mid]>target && mid==0)
                {
                    return 0;
                }
                else
                {
                    high = mid-1;
                }
            }
            else if(a[mid]<target)
            {
                if(mid+1<=n && a[mid+1]>target)
                {
                    return mid+1;
                }
                else if(a[mid]<target && mid==n)
                {
                    return n+1;
                }
                else
                {
                    low = mid+1;
                }
            }
        }
        return -1;
    }
}
