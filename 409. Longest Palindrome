class Solution {
public:
    int longestPalindrome(string s) {
        int ans = 0;
        unordered_map<int,int> mp;
        int n = s.length();
        for(int i=0; i<n; ++i)
        {
            mp[s[i]]++;
        }
        int f = 0;
        for(auto& it: mp)
        {
            if(it.second%2==0)
            {
                ans = ans + it.second;
            }
            else
            {
                ans = ans + (it.second) - 1;
                f = 1;
            }
        }
        if(f==1)
        {
            ans = ans + 1;
        }
        return ans;
    }
};
