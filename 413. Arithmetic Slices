class Solution {
    public int numberOfArithmeticSlices(int[] nums) {
        if(nums.length<3)
        {
            return 0;
        }
        else
        {
            int ans=0;
            int count=0;
            for(int i=1; i<nums.length-1; ++i)
            {
                if(nums[i] - nums[i-1] == nums[i+1]-nums[i])
                {
                    count = count + 1;
                    ans = ans + count;
                }
                else
                {
                    count = 0;
                }
            }
            return ans;
        }
    }
}
