class Solution {
public:
    int minMoves2(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int n = nums.size();
        if(n%2!=0)
        {
            int mid = nums[n/2];
            int ans = 0;
            for(int i = 0; i < n; ++i)
            {
                ans = ans + abs(nums[i] - mid);
            }
            return ans;
        }
        else
        {
            int mid1 = nums[(n/2)-1];
            int mid2 = nums[n/2];
            int ans1 = 0;
            for(int i = 0; i < n; ++i)
            {
                ans1 = ans1 + abs(nums[i] - mid1);
            }
            int ans2 = 0;
            for(int i = 0; i < n; ++i)
            {
                ans2 = ans2 + abs(nums[i] - mid2);
            }
            return std::min(ans1, ans2);
        }
    }
};
