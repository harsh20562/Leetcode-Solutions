class Solution {
    public boolean detectCapitalUse(String word) {
        int capital = 0;
        for(int i=0; i<word.length(); ++i)
        {
            int x = word.charAt(i);
            if(x>=65 && x<=90)
            {
                capital += 1;
            }
        }
        if(capital==0 || capital==word.length())
        {
            return true;
        }
        else if(capital==1)
        {
            int x = word.charAt(0);
            if(x>=65 && x<=90)
            {
                return true;
            }
            else
            {
                return false;
            }
        }
        else
        {
            return false;
        }
    }
}
