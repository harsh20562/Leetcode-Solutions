class Solution {
public:
    int scheduleCourse(vector<vector<int>>& v) {
        int n = v.size();
        sort(v.begin(),v.end(),cmp);
        priority_queue<int> pq;
        int sum = 0;
        for(int i=0; i<n; ++i)
        {
            if(sum + v[i][0] <= v[i][1])
            {
                sum = sum + v[i][0];
                pq.push(v[i][0]);
            }
            else
            {
                if(pq.empty()!=true && pq.top() > v[i][0])
                {
                    sum = sum - pq.top();
                    sum = sum + v[i][0];
                    pq.pop();
                    pq.push(v[i][0]);
                }
            }
        }
        return pq.size();
    }
    static bool cmp(vector<int> a, vector<int> b) {
        return a[1]<b[1];
    }
};
