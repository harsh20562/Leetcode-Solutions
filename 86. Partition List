/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* partition(ListNode* head, int x) {
        ListNode* head1 = NULL;
        ListNode* head2 = NULL;
        ListNode* p = head;
        ListNode* p1;
        ListNode* p2;
        while(p!=NULL)
        {
            if(p->val < x && head1==NULL)
            {
                head1 = p;
            }
            if(p->val >= x && head2==NULL)
            {
                head2 = p;
            }
            if(head1!=NULL && head2!=NULL)
            {
                break;
            }
            p = p->next;
        }
        // cout<<head1->val<<" "<<head2->val<<" ";
        if(head1==NULL || head2==NULL)
        {
            return head;
        }
        p1 = head1;
        p2 = head2;
        p = head;
        while(p!=NULL)
        {
            if(p==head1 || p==head2)
            {
                p = p->next;
                continue;
            }
            if(p->val < x)
            {
                p1->next = p;
                p1 = p1->next;
            }
            else if(p->val >= x)
            {
                p2->next = p;
                p2 = p2->next;
            }
            p = p->next;
        }
        p1->next = head2;
        p2->next = NULL;
        return head1;
    }
};
