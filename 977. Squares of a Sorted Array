class Solution {
    public int[] sortedSquares(int[] a) {
        int n = a.length;
        int i=0;
        int j = n-1;
        int[] ans = new int[n];
        int idx = n-1;
        while(i<=j)
        {
            if(Math.abs(a[i])>Math.abs(a[j]))
            {
                ans[idx] = a[i];
                ++i;
                --idx;
            }
            else
            {
                ans[idx] = a[j];
                --j;
                --idx;
            }
        }
        for(i=0; i<n; ++i)
        {
            ans[i] = ans[i]*ans[i];
        }
        return ans;
    }
}
