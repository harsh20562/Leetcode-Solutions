class Solution {
    public void reorderList(ListNode head) {
        if(head==null || head.next==null || head.next.next==null)
        {
            return;
        }
        ListNode p1 = head;
        ListNode p2 = head;
        // For finding the middle of the linked list using slow-fast pointer method
        while(p2!=null && p2.next!=null)
        {
            p1=p1.next;
            p2=p2.next;
            if(p2.next!=null)
            {	p2=p2.next; }
        }
        ListNode head1 = head;
	    ListNode head2 = p1.next;
        p1.next = null;
        // Reverse the later half of linked list
        head2 = reverseLL(head2);
        ListNode n1 = head1.next;
        ListNode n2 = head2.next;
        if(n2==null)
        {
            head1.next = head2;
            head2.next = n1;
        }
        else
        {
            while(head2!=null)
            {
                head1.next = head2;
                head2.next = n1;
                head1 = n1;
                head2 = n2;
                n1 = n1.next;
                if(n2!=null)
                {   n2 = n2.next;   }
            }
        }
    }
    ListNode reverseLL(ListNode head)
    {
        if(head==null || head.next==null)
        {   return head;    }
        else
        {
            ListNode p=reverseLL(head.next);
            head.next.next = head;
            head.next = null;
            return p;
        }
    }
}
